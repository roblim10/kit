<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <Button
        android:id="@+id/activity_contact_list_add_contact_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/add_contact" />
    
    <ListView
        android:id="@+id/activity_contact_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_contact_list_add_contact_button" />
   	<TextView 
   	    android:id="@+id/activity_contact_list_no_contacts_textview"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:layout_above="@id/activity_contact_list_add_contact_button"
   	    android:gravity="center"
   	    android:text="@string/no_contacts_message"
   	    android:textSize="24sp"
   	    android:textColor="#999999" />
    
</RelativeLayout>
