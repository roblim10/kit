<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/activity_edit_contact_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:drawableStart="@drawable/toucan"
        android:drawablePadding="6dp" />
    
    <TextView
      	android:id="@+id/activity_edit_contact_remind_instructions_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_edit_contact_remind_instructions" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        
	   <NumberPicker 
	       android:id="@+id/activity_edit_contact_number_picker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_margin="6dp"
	       android:descendantFocusability="blocksDescendants" />
	
	   <NumberPicker
	       android:id="@+id/activity_edit_contact_unit_picker"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_margin="6dp"
	       android:gravity="center_horizontal"
	       android:descendantFocusability="blocksDescendants" />
	   
    </LinearLayout>
    
    <TextView 
        android:id="@+id/activity_edit_contact_contact_type_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_edit_contact_contact_type_instructions"
        android:paddingTop="10dp" />
    
    <ListView
        android:id="@+id/activity_edit_contact_contact_type_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
